#!/usr/bin/env python3

from evdev import InputDevice, categorize, ecodes
import time
import os
import random
import threading
import sys
import getTouch
import start_lock
ex = True
started = False


myid = ""
os.system("xhost +")
fid = ""


def clock():
    try:
        with open("/tmp/lock.lock", "r") as lock_file:
            content = lock_file.read()
            lock_file.close()
        return content
    except FileNotFoundError:
        return None


def ct():
    tid = fid
    tim = 25*60
    while ex:
        if fid == tid:
            time.sleep(1)
            tim -= 1
            print(tim)
            if tim == 0:
                global myid
                if clock() == myid:
                    start_lock.startlock()
                    global started
                    started = True
                    break
        else:
            break


def detect_touch_events(device_path):
    try:
        global fid, started
        device = InputDevice(device_path)
        print(f"Dokunmatik ekran algılandı: {device.name}")
        events = []
        fid = ''.join(random.choice('0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ')
                      for i in range(6))
        sthread = threading.Thread(target=ct)
        sthread.start()
        for event in device.read_loop():
            if not started:
                if event.sec not in events:
                    if len(events) > 15:
                        events.clear()
                    events.append(event.sec)
                    print(events)
                    global ex
                    fid = ''.join(random.choice(
                        '0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ') for i in range(6))
                    ex = False
                    sthread.join()
                    ex = True
                    sthread = threading.Thread(target=ct)
                    sthread.start()
                    print("dokunma algılandı")
            else:
                break
    except:
        print("touch acces denied")
        time.sleep(45 * 60)
        if clock() == myid:
            # Ana betiği başlatın
            start_lock.startlock()

myid = clock()
# Touch cihazının ID'sini al
if myid != None:
    if getTouch.getPath() != None:
        detect_touch_events(getTouch.getPath())
    else:
        print("Touch cihazı bulunamadı.")
        time.sleep(45 * 60)
        if clock() == myid:
            # Ana betiği başlatın
            start_lock.startlock()